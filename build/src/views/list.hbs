<div class="container p-4">
    <div class="row">
        {{#each count}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                        <h3 class="card-title text-uppercase">
                            {{name}}
                        </h3>
                        <h5 class="card-title text-uppercase">
                            {{profession}}
                        </h5>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not players yet.</p>
                <a href="/home">Be the first one!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>